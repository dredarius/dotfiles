// Inspired by Catnap
{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "source": "/home/josh/.config/fastfetch/OCP.png",
        "padding": {
            "left": 5,
            "right": 6,
            "top": 1,
            "type": "auto",
        }
    },
    "display": {
        "separator": "  ",
        "key": {
            "width": 22,
            "paddingLeft": 4,
        },
        "size": {
          "binaryPrefix": "jedec",
        },
        "percent": {
            "type": 11,
            "color": {
                "left": "38;2;224;122;63",
                "right": "38;2;224;122;63",
                "elapsed": "38;2;224;122;63"
            }
        },
        "bar": {
            "border": {
                "left": "╺",
                "leftElapsed": "╺",
                "right": "╸",
                "rightElapsed": "╸"
            },
            "char": {
                "total": "▓",
                "elapsed": "█"
            },
            "width": 49,
            "color": {
                "left": "38;2;224;122;63",
                "right": "38;2;224;122;63",
                "elapsed": "38;2;224;122;63"
            }
        },
    },
    "modules": [
        "break",
        {
            "type": "custom",
            "format": "  \u001b[38;2;224;122;63m┏━━━━━━━━━━━━━━━━━━━━\u001b[38;2;199;139;95m System Info \u001b[38;2;224;122;63m━━━━━━━━━━━━━━━━━━━━┓\u001b[0m"
        },
        "break",
{
