    "format": "{name} {version}",
    "keyColor": "38;2;199;139;95"
},
{
    "key": " 󰌢 Kernel    ",
    "type": "kernel",
    "format": "{release}",
    "keyColor": "38;2;139;123;139"
},
{
    "key": " 󰻠 Arch      ",
    "type": "os",
    "format": "{arch}",
    "keyColor": "38;2;107;114;128"
},
{
